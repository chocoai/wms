<?xml version="1.0" encoding="utf-8"?>
<BillFormMeta Key="xiaoxiangfapiaoguanli" Version="1.0.0" BillType="Bills" Caption="销项发票管理叙事薄">
    <BillBody>
        <BillBodyMeta UserAgent="web">
            <BillUIPanel Layout="flex" FlexDirection="column" Width="100%" Key="mainContainer" Caption="销项发票管理叙事薄"
                         S=""> 
                <BillUIPanel Layout="flex" Key="toolbox" Caption="工具栏" >
                    <BillUIWidget Key="add" Caption="新增"
                                  Left="1" Top="1" Width="1" Height="1" EnabledWhen="True"
                                  Icon="glyphicon glyphicon-plus-sign" WidgetType="BillUIButton">
                        <Triggers>
                            <Trigger Type="javascript/angular" Runat="client">
                                <![CDATA[
										@$this.add();
						        ]]>
                            </Trigger>
                        </Triggers>
                    </BillUIWidget>
                    <BillUIWidget Key="edit" Caption="编辑"
                                  Left="2" Top="1" Width="1" Height="1" EnabledWhen="True"
                                  Icon="glyphicon glyphicon-edit" WidgetType="BillUIButton">
                        <Triggers>
                            <Trigger Type="javascript/angular" Runat="client">
                                <![CDATA[
                                        var sos = getSos('xiaoxiangfapiaoguanli');
                                        if(sos.length == 0 || sos.length > 1){
                                            alert("请选择一条记录");
							                return;
                                        }else if(sos[0].status !=1){
                                            alert("【录入状态】的单据才能编辑！");
                                             return;
                                        }
                                        @$this.edit();
	                            ]]>
                            </Trigger>
                        </Triggers>
                    </BillUIWidget>
                    <BillUIWidget Key="del" Caption="删除"
                                  EnabledWhen="True"
                                  Icon="glyphicon glyphicon-trash" WidgetType="BillUIButton" S="btn btn-danger">
                        <Triggers>
                            <Trigger Type="javascript/angular" Runat="client">
                                <![CDATA[
									 var sos = getSos('xiaoxiangfapiaoguanli');
									 if(sos.length==0){
							            alert("请选择需要删除记录");
							            return;
							         }else{
							             for(var i=0;i<sos.length;i++){
							                 if(sos[i].status!=1){
							                     alert("【录入状态】的单据可以删除！");
							                     return;
							                 }
							             }
							         }
							         @$this.delete();
                      		]]>
                            </Trigger>
                        </Triggers>
                    </BillUIWidget>

                    <BillUIWidget Key="print" Caption="打印"
                                  EnabledWhen="True"  Disable="true"
                                  Icon="glyphicon glyphicon-print" WidgetType="BillUIButton">
                        <Triggers>
                            <Trigger Type="javascript/angular" Runat="client">
                                <![CDATA[

	                            ]]>
                            </Trigger>
                        </Triggers>
                    </BillUIWidget>

                    <BillUIWidget Key="prePrint" Caption="打印预览" Disable="true"
                                  EnabledWhen="True"
                                  Icon="glyphicon glyphicon-camera" WidgetType="BillUIButton">
                        <Triggers>
                            <Trigger Type="javascript/angular" Runat="client">
                                <![CDATA[

	                            ]]>
                            </Trigger>
                        </Triggers>
                    </BillUIWidget>
                </BillUIPanel>
                <BillUIPanel Layout="flex" Key="bills_tools" Caption="查询面板"
                             S="panel panel-default publicPanel">
                    <BillUIGridPanel Device="sm" key="boxtool">
                        <BillUIRowPanel>
                            <BillUIColPanel Width="3">
                                <BillUIWidget Key="danjubianhao" ParameterKey="danjubianhao"
                                              DataTableKey="xiaoxiangfapiaoguanli"
                                              Caption="单据编号"
                                              EnabledWhen="True"
                                              Icon="glyphicon glyphicon-send" WidgetType="BillUIString">
                                </BillUIWidget>
                            </BillUIColPanel>
                            <BillUIColPanel Width="3">
                                <BillUIWidget Key="kehubianhao" ParameterKey="kehubianhao"
                                              DataTableKey="xiaoxiangfapiaoguanli"
                                              Caption="客户编号"
                                              EnabledWhen="True"
                                              Icon="glyphicon glyphicon-send" WidgetType="BillUIString">
                                </BillUIWidget>
                            </BillUIColPanel>
                            <BillUIColPanel Width="3">
                                <BillUIWidget Key="kehumingcheng" ParameterKey="kehumingcheng"
                                              DataTableKey="xiaoxiangfapiaoguanli"
                                              Caption="客户名称"
                                              EnabledWhen="True"
                                              Icon="glyphicon glyphicon-send" WidgetType="BillUIString">
                                </BillUIWidget>
                            </BillUIColPanel>
                            <BillUIColPanel Width="3">
                                <BillUIWidget Key="fapiaohaoma" ParameterKey="fapiaohaoma"
                                              DataTableKey="xiaoxiangfapiaoguanli"
                                              Caption="发票号码"
                                              EnabledWhen="True"
                                              Icon="glyphicon glyphicon-send" WidgetType="BillUIString">
                                </BillUIWidget>
                            </BillUIColPanel>
                            <BillUIColPanel Width="3">
                                <BillUIWidget Key="status" ParameterKey="status"
                                              DataTableKey="xiaoxiangfapiaoguanli" Caption="发票状态" EnabledWhen="True"
                                              Icon="glyphicon glyphicon-send" WidgetType="BillUISelect"
                                >
                                    <Init Type="javascript/angular" Runat="client">
                                        <![CDATA[
                                          this.loadDataSource();
                                 	]]>
                                    </Init>
                                    <Properties>
                                        <Property Name="datasource" Type="internal">
                                            [{name:"录入",value:1},{name:"正式",value:20}]
                                        </Property>
                                    </Properties>

                                </BillUIWidget>
                            </BillUIColPanel>
                            <BillUIColPanel Width="3">
                                <BillUIWidget Caption="取消" Key="cancel"
                                              EnabledWhen="True"
                                              Icon="glyphicon glyphicon-send" WidgetType="BillUIButton">
                                    <Triggers>
                                        <Trigger Type="javascript/angular" Runat="client">
                                            <![CDATA[
			                                      @danjubianhao.setValue("");
			                                      @khbh.setValue("");
			                                      @khmc.setValue("");
			                                      @$this.__load();
			 	                            ]]> 
                                        </Trigger>
                                    </Triggers>
                                </BillUIWidget>
                                <BillUIWidget Caption="查询" Key="search"
                                              EnabledWhen="True"
                                              Icon="glyphicon glyphicon-send" WidgetType="BillUIButton">
                                    <Triggers>
                                        <Trigger Type="javascript/angular" Runat="client">
                                            <![CDATA[
                                    @$this.__load("xiaoxiangfapiaoguanli");
	                            ]]>
                                        </Trigger>
                                    </Triggers>
                                </BillUIWidget>
                            </BillUIColPanel>
                        </BillUIRowPanel>
                    </BillUIGridPanel>
                </BillUIPanel>
                <BillUIPanel Layout="tab" Key="bills_tabs" Caption="查询展示列"
                             S="panel  panel-primary  publicPanel">
                    <BillUIGrid Key="grid0" SelectMode="Multi" OptMode="View" DataTableKey="xiaoxiangfapiaoguanli">
                        <RowCheckRule>
                            <![CDATA[
                                        this.status<10,success,warning
                                    ]]>
                        </RowCheckRule>
                        <DoubleClickHandlers>
                            <DoubleClickHandler>
                                <![CDATA[
                                    var shangpin=this.row;
                                    window.location.href='/bill/view/bill?billKey=xiaoxiangfapiaoguanli&BillID='+shangpin.BillID+'&allDisabled=true';

                                ]]>
                            </DoubleClickHandler>
                        </DoubleClickHandlers>

                        <GridHeads>
                        	<GridHead Col="danjubianhao" Caption="单据编号" enableEdit="True" Width="150px">
                                <BillUIWidget Key="danjubianhao" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="kaipiaoriqi" Caption="开票日期" enableEdit="True" Width="150px">
                                <BillUIWidget Key="kaipiaoriqi" WidgetType="BillUIDateTime"/>
                            </GridHead>
                            <GridHead Col="kaipiaoyuan" Caption="开票员" enableEdit="True" Width="120px">
                                <BillUIWidget Key="kaipiaoyuan" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="status" Caption="发票状态" enableEdit="True" Width="120px">
                                <BillUIWidget Key="status" WidgetType="BillUIInteger">
                                    <Formatters>
                                        <Formatter>
                                            <![CDATA[
                                                 [{'url':[{name:'录入',value:'1'},{name:'正式',value:'20'},{name:'作废',value:'-1'}],'type':'status','local':'true'}]
                                            ]]>
                                        </Formatter>
                                    </Formatters>
                                </BillUIWidget>
                            </GridHead>
                            <GridHead Col="kehubianhao" Caption="客户编号" enableEdit="True" Width="150px">
                                <BillUIWidget Key="kehubianhao" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="kehumingcheng" Caption="客户名称" enableEdit="True" Width="150px">
                                <BillUIWidget Key="kehumingcheng" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="shuihao" Caption="税号" enableEdit="True" Width="100px">
                                <BillUIWidget Key="shuihao" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="lianxidizhi" Caption="联系地址" enableEdit="True" Width="150px">
                                <BillUIWidget Key="lianxidizhi" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="kaihuyinhang" Caption="开户银行" enableEdit="True" Width="120px">
                                <BillUIWidget Key="kaihuyinhang" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="yinhangzhanghu" Caption="银行账户" enableEdit="True" Width="120px">
                                <BillUIWidget Key="yinhangzhanghu" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="guihao" Caption="轨号" enableEdit="True" Width="80px">
                                <BillUIWidget Key="guihao" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="fapiaoleixing" Caption="发票类型" enableEdit="True" Width="80px">
                                <BillUIWidget Key="fapiaoleixing" WidgetType="BillUIInteger">
                                    <Formatters>
                                        <Formatter>
                                            <![CDATA[
                                                [{'url':[{name:'普通发票',value:'0'},{name:'增值税发票',value:'1'}],'type':'status','local':'true'}]
                                            ]]>
                                        </Formatter>
                                    </Formatters>
                                </BillUIWidget>
                            </GridHead>
                            <GridHead Col="fapiaohaoma" Caption="发票号码" enableEdit="True" Width="80px">
                                <BillUIWidget Key="fapiaohaoma" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="fpsfts" Caption="发票是否推送" enableEdit="True" Width="80px">
                                <BillUIWidget Key="fpsfts" WidgetType="BillUIInteger">
                                    <Formatters>
                                        <Formatter>
                                            <![CDATA[
                                                [{'url':[{name:'否',value:'0'},{name:'是',value:'1'}],'type':'status','local':'true'}]
                                            ]]>
                                        </Formatter>
                                    </Formatters>
                                </BillUIWidget>
                            </GridHead>
                            <GridHead Col="beizhu" Caption="备注" enableEdit="True" Width="80px">
                                <BillUIWidget Key="beizhu" WidgetType="BillUIString"/>
                            </GridHead>
                        </GridHeads>
                    </BillUIGrid>
                </BillUIPanel>
            </BillUIPanel>
        </BillBodyMeta>
    </BillBody>
