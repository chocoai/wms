<?xml version="1.0" encoding="utf-8"?>
<BillFormMeta Key="shouyingshangpin" Version="1.0.0" BillType="Bills" Caption="首营商品叙事薄">
    <BillBody>
        <BillBodyMeta UserAgent="web">
            <BillUIPanel Layout="flex" FlexDirection="column" Width="100%" Key="mainContainer" Caption="首营商品叙事薄"
                         S="">
                <BillUIPanel Layout="flex" Key="toolbox" Caption="工具栏" >
                    <BillUIWidget Key="add" Caption="新增"
                                  Left="1" Top="1" Width="1" Height="1" EnabledWhen="True"
                                  Icon="glyphicon glyphicon-plus-sign" WidgetType="BillUIButton">
                        <Triggers>
                            <Trigger Type="javascript/angular" Runat="client">
                                <![CDATA[
										@$this.add();
						        ]]>
                            </Trigger>
                        </Triggers>
                    </BillUIWidget>
                    <BillUIWidget Key="edit" Caption="编辑"
                                  Left="2" Top="1" Width="1" Height="1" EnabledWhen="True"
                                  Icon="glyphicon glyphicon-edit" WidgetType="BillUIButton">
                        <Triggers>
                            <Trigger Type="javascript/angular" Runat="client">
                                <![CDATA[
											var sos=getSos("shouyingshangpin");
											for(var i=0;i<sos.length;i++){
													if(sos[i].status!=1){
														alert("请勾选非正式单据编辑!!!");
														return;
													}
											}
                                            @$this.edit();
	                            ]]>
                            </Trigger>
                        </Triggers>
                    </BillUIWidget>
                    <BillUIWidget Key="del" Caption="删除"
                                  EnabledWhen="True"
                                  Icon="glyphicon glyphicon-trash" WidgetType="BillUIButton" S="btn btn-danger">
                        <Triggers>
                            <Trigger Type="javascript/angular" Runat="client">
                                <![CDATA[
                                    @$this.delete();
	                            ]]>
                            </Trigger>
                        </Triggers>
                    </BillUIWidget>
                </BillUIPanel>
                <BillUIPanel Layout="flex" Key="bills_tools" Caption="查询面板"
                             S="panel panel-default publicPanel">
                                <BillUIGridPanel Device="sm" key="boxtool">
                                    <BillUIRowPanel>
                                        <BillUIColPanel Width="3">
                                            <BillUIWidget Key="danjubianhao" ParameterKey="danjubianhao"
                                                          DataTableKey="shouyingshangpin"
                                                          Caption="单据编号"
                                                          EnabledWhen="True"
                                                          Icon="glyphicon glyphicon-send" WidgetType="BillUIString">
                                            </BillUIWidget>
                                        </BillUIColPanel>
                                        <BillUIColPanel Width="3">
                                            <BillUIWidget Key="shangpinmingcheng" ParameterKey="shangpinmingcheng"
                                                          DataTableKey="shouyingshangpin"
                                                          Caption="商品名称"
                                                          EnabledWhen="True"
                                                          Icon="glyphicon glyphicon-send" WidgetType="BillUIString">
                                            </BillUIWidget>
                                        </BillUIColPanel>
                                        <BillUIColPanel Width="3">
                                            <BillUIWidget Key="status" ParameterKey="status"
                                                          DataTableKey="shouyingshangpin" Caption="状态"
                                                          EnabledWhen="True" Src="bill/getDataStatus?type=shouyingshangpin"
                                                          Icon="glyphicon glyphicon-send" WidgetType="BillUISelect">
                                                <Init Type="javascript/angular" Runat="client">
                                                    <![CDATA[
                                         this.loadDataSource();
                                 ]]>
                                                </Init>
                                            </BillUIWidget>
                                        </BillUIColPanel>
                                        <BillUIColPanel Width="3">
                                            <BillUIWidget Caption="取消" Key="cancel"
                                                          EnabledWhen="True"
                                                          Icon="glyphicon glyphicon-send" WidgetType="BillUIButton">
                                                <Triggers>
                                                    <Trigger Type="javascript/angular" Runat="client">
                                                        <![CDATA[
                                     @danjubianhao.setValue("");
                                     @shangpinmingcheng.setValue("");
                                     @status.setValue("");
                                     @$this.__load();
	                            ]]>
                                                    </Trigger>
                                                </Triggers>
                                            </BillUIWidget>
                                            <BillUIWidget Caption="查询" Key="search"
                                                          EnabledWhen="True"
                                                          Icon="glyphicon glyphicon-send" WidgetType="BillUIButton">
                                                <Triggers>
                                                    <Trigger Type="javascript/angular" Runat="client">
                                                        <![CDATA[
                                    @$this.__load("shouyingshangpin");
	                            ]]>
                                                    </Trigger>
                                                </Triggers>
                                            </BillUIWidget>
                                        </BillUIColPanel>
                                    </BillUIRowPanel>
                                </BillUIGridPanel>
                            </BillUIPanel>
                            <!--<BillUIPanel Layout="tab" Key="bills_tabs" Caption="查询展示列"-->
                                         <!--S="">-->
                <BillUIGrid Key="grid0"  OptMode="View" SelectMode="Radio" DataTableKey="shouyingshangpin">
                                    <DoubleClickHandlers>
                            <DoubleClickHandler>
                                <![CDATA[
                                    var shangpin=this.row;
                                    window.location.href='/bill/view/bill?billKey=shouyingshangpin&BillID='+shangpin.BillID+'&allDisabled=true';

                                ]]>
                            </DoubleClickHandler>
                        </DoubleClickHandlers>
                                    <GridHeads>
                                        <GridHead Col="danjubianhao" Caption="单据编号" enableEdit="True"
                                                  Width="180px">
                                            <BillUIWidget Key="danjubianhao" WidgetType="BillUIString"/>
                                        </GridHead>
                                        <GridHead Col="kaipiaoriqi" Caption="开票日期" enableEdit="True"
                                                  Width="80px">
                                            <BillUIWidget Key="kaipiaoriqi" WidgetType="BillUIString"/>
                                        </GridHead>
                                        <GridHead Col="kaipiaoyuan" Caption="开票员" enableEdit="True"
                                                  Width="80px">
                                            <BillUIWidget Key="kaipiaoyuan" WidgetType="BillUIString"/>
                                        </GridHead>

                                        <GridHead Col="shangpinbianhao" Caption="商品编号" enableEdit="True"
                                                  Width="120px">
                                            <BillUIWidget Key="shangpinbianhao" WidgetType="BillUIDateTime"/>
                                        </GridHead>
                                        <GridHead Col="shangpinmingcheng" Caption="商品名称" enableEdit="True"
                                                  Width="150px">
                                            <BillUIWidget Key="shangpinmingcheng" WidgetType="BillUIString"/>
                                        </GridHead>
                                        <GridHead Col="status" Caption="状态" enableEdit="True" Width="60px">
                                            <BillUIWidget Key="status"
                                                          WidgetType="BillUIInteger">
                                                <Formatters>
                                                    <Formatter>
                                                        <![CDATA[
                                                [{'url':'/bill/getDataStatus','type':'shouyingshangpin'}]
                                            ]]>
                                                    </Formatter>
                                                </Formatters>
                                            </BillUIWidget>
                                        </GridHead>
                                        <GridHead Col="shengchanchangjia" Caption="生产厂家" enableEdit="True" Width="180px">
                                            <BillUIWidget Key="shengchanchangjia" WidgetType="BillUIString"/>
                                        </GridHead>
                                        <GridHead Col="chandi" Caption="产地" enableEdit="True" Width="180px">
                                            <BillUIWidget Key="chandi" WidgetType="BillUIString"/>
                                        </GridHead>
                                        <GridHead Col="pizhunwenhao" Caption="批准文号" enableEdit="True" Width="120px">
                                            <BillUIWidget Key="pizhunwenhao" WidgetType="BillUIString"/>
                                        </GridHead>
                                    </GridHeads>
                                </BillUIGrid>
                            <!--</BillUIPanel>-->
            </BillUIPanel>
        </BillBodyMeta>
    </BillBody>
    <BillHeadMeta>
    </BillHeadMeta>
</BillFormMeta>

