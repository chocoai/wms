<?xml version="1.0" encoding="utf-8"?>
<BillFormMeta Key="kehutingshoushenqing" Version="1.0.0" BillType="Bills" Caption="客户停售叙事薄">
    <BillBody>
        <BillBodyMeta UserAgent="web">
            <BillUIPanel Layout="flex" FlexDirection="column" Width="100%" Key="mainContainer" Caption="客户停售叙事薄" S="">
				<BillUIPanel Layout="flex" Key="toolbox" Caption="工具栏" >
					<BillUIWidget Key="add" Caption="新增"
								  Left="1" Top="1" Width="1" Height="1" EnabledWhen="True"
								  Icon="glyphicon glyphicon-plus-sign" WidgetType="BillUIButton">
						<Triggers>
							<Trigger Type="javascript/angular" Runat="client">
								<![CDATA[
										@$this.add();
						        ]]>
							</Trigger>
						</Triggers>
					</BillUIWidget>
					<BillUIWidget Key="edit" Caption="编辑"
								  Left="2" Top="1" Width="1" Height="1" EnabledWhen="True"
								  Icon="glyphicon glyphicon-edit" WidgetType="BillUIButton">
						<Triggers>
							<Trigger Type="javascript/angular" Runat="client">
								<![CDATA[
											var sos=getSos("kehutingshoushenqing");
											for(var i=0;i<sos.length;i++){
													if(sos[i].status!=1){
														alert("请勾选非正式单据编辑!!!");
														return;
													}
											}
                                            @$this.edit();
	                            ]]>
							</Trigger>
						</Triggers>
					</BillUIWidget>
					<BillUIWidget Key="del" Caption="删除"
								  EnabledWhen="True"
								  Icon="glyphicon glyphicon-trash" WidgetType="BillUIButton" S="btn btn-danger">
						<Triggers>
							<Trigger Type="javascript/angular" Runat="client">
								<![CDATA[
                                         @$this.delete();
	                            ]]>
							</Trigger>
						</Triggers>
					</BillUIWidget>
				</BillUIPanel>
                <BillUIPanel Layout="grid" Key="bills_tools" Caption="查询面板" S="panel panel-default publicPanel">
                	<BillUIGridPanel Device="sm" key="boxtool">
                         <BillUIRowPanel>
                         	<BillUIColPanel Width="3">
                         		<BillUIWidget Key="danjubianhao" ParameterKey="danjubianhao"  
                         			DataTableKey="kehutingshoushenqing"  Caption="单据编号"
                                    EnabledWhen="True" Icon="glyphicon glyphicon-send" WidgetType="BillUIString">
                    			</BillUIWidget>
                         	</BillUIColPanel>
                         	<BillUIColPanel Width="3">
                         		<BillUIWidget Key="shenqingxingzhi" ParameterKey="shenqingxingzhi"
                    				DataTableKey="kehutingshoushenqing" Caption="申请性质"
                                    EnabledWhen="True" Icon="glyphicon glyphicon-send" WidgetType="BillUISelect">
			                        <Init Type="javascript/angular" Runat="client">
			                            <![CDATA[
			                                         this.loadDataSource();
			                                 ]]>
			                        </Init>
									<Properties>
										<Property Name="datasource" Type="internal">[{name:"停售",value:0},{name:"解除停售",value:1}]</Property>
									</Properties>
                    			</BillUIWidget>
                         	</BillUIColPanel>
							 <BillUIColPanel Width="3">
								 <BillUIWidget Key="status" ParameterKey="status"
											   DataTableKey="kehutingshoushenqing" Caption="状态" EnabledWhen="True"
											   Icon="glyphicon glyphicon-send" WidgetType="BillUISelect" Src="bill/getDataStatus?type=kehutingshoushenqing">
									 <Init Type="javascript/angular" Runat="client">
										 <![CDATA[
                                          this.loadDataSource();
                                 	]]>
									 </Init>
								 </BillUIWidget>
							 </BillUIColPanel>
                         	<BillUIColPanel Width="3">
                         		<BillUIWidget Caption="取消" Key="cancel" EnabledWhen="True"
                                  Icon="glyphicon glyphicon-send" WidgetType="BillUIButton">
			                        <Triggers>
			                            <Trigger Type="javascript/angular" Runat="client">
			                                <![CDATA[
				                                @danjubianhao.setValue(""); 
				                                @shenqingxingzhi.setValue("");
				                                @status.setValue("");
				                                @$this.__load();
				                            ]]>
			                            </Trigger>
			                        </Triggers>
			                    </BillUIWidget>
			                    <BillUIWidget Caption="查询" Key="search" EnabledWhen="True"
			                                  Icon="glyphicon glyphicon-send" WidgetType="BillUIButton">
			                        <Triggers>
			                            <Trigger Type="javascript/angular" Runat="client">
			                                <![CDATA[
			                                    @$this.__load("kehutingshoushenqing");
				                            ]]>
			                            </Trigger>
			                        </Triggers>
			                    </BillUIWidget>
                         	</BillUIColPanel>
                         </BillUIRowPanel>
                	</BillUIGridPanel>
                </BillUIPanel>

				<!--<BillUIPanel Layout="tab" Key="bills_tabs" Caption="查询展示列"-->
							 <!--S="">-->
                    <BillUIGrid Key="grid0" SelectMode="Radio" OptMode="View" DataTableKey="kehutingshoushenqing">
						<DoubleClickHandlers>
							<DoubleClickHandler>
								<![CDATA[
                                    var dingdan=this.row;
                                    window.location.href='/bill/view/bill?billKey=kehutingshoushenqing&BillID='+dingdan.BillID+'&allDisabled=true';
                                ]]>
							</DoubleClickHandler>
						</DoubleClickHandlers>
                       <GridHeads>
                           <GridHead Col="danjubianhao" Caption="单据编号" enableEdit="True" Width="150px">
                               <BillUIWidget Key="danjubianhao" WidgetType="BillUIString"/>
                           </GridHead>
                           <GridHead Col="createTime" Caption="制单时间" enableEdit="True" Width="80px">
                               <BillUIWidget Key="createTime" WidgetType="BillUIString"/>
                           </GridHead>
                           <GridHead Col="creatorName" Caption="制单人" enableEdit="True" Width="100px">
                               <BillUIWidget Key="creatorName" WidgetType="BillUIString"/>
                           </GridHead>
                           <GridHead Col="status" Caption="状态" enableEdit="True" Width="80px">
                               <BillUIWidget Key="status" WidgetType="BillUIInteger">
                                   <Formatters>
                                       <Formatter>
                                           <![CDATA[
                                   [{'url':'/bill/getDataStatus','type':'kehutingshoushenqing'}]
                               ]]>
                                       </Formatter>
                                   </Formatters>
                               </BillUIWidget>
                           </GridHead>
                           <GridHead Col="shenqingxingzhi" Caption="申请性质" enableEdit="True" Width="80px">
							   <BillUIWidget Key="shenqingxingzhi" WidgetType="BillUIInteger">
								   <Formatters>
									   <Formatter>
										   <![CDATA[
													[{'url':[{name:'解除停售',value:1},{name:'停售',value:0}],'type':'shenqingxingzhi','local':'true'}]
												]]>
									   </Formatter>
								   </Formatters>
							   </BillUIWidget>
                           </GridHead>
                           <GridHead Col="beizhu" Caption="备注" enableEdit="True" Width="80px">
                               <BillUIWidget Key="beizhu" WidgetType="BillUIString"/>
                           </GridHead>
                       </GridHeads>
                    </BillUIGrid>
                <!--</BillUIPanel>-->
            </BillUIPanel>
        </BillBodyMeta>
    </BillBody>
