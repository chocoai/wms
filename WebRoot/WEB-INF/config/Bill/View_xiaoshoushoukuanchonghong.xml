<?xml version="1.0" encoding="utf-8"?>
<BillFormMeta Key="xiaoshoushoukuanchonghong" Version="1.0.0" BillType="Bills" Caption="销售收款冲红叙事薄">
    <BillBody>
        <BillBodyMeta UserAgent="web">
            <BillUIPanel Layout="flex" FlexDirection="column" Width="100%" Key="mainContainer" Caption="销售收款冲红叙事薄"
                         S=""> 
                <BillUIPanel Layout="flex" Key="toolbox" Caption="工具栏" >
                    <BillUIWidget Key="add" Caption="新增"
                                  Left="1" Top="1" Width="1" Height="1" EnabledWhen="True"
                                  Icon="glyphicon glyphicon-plus-sign" WidgetType="BillUIButton">
                        <Triggers>
                            <Trigger Type="javascript/angular" Runat="client">
                                <![CDATA[
										@$this.add();
						        ]]>
                            </Trigger>
                        </Triggers>
                    </BillUIWidget>
                    <BillUIWidget Key="edit" Caption="编辑"
                                  Left="2" Top="1" Width="1" Height="1" EnabledWhen="True"
                                  Icon="glyphicon glyphicon-edit" WidgetType="BillUIButton">
                        <Triggers>
                            <Trigger Type="javascript/angular" Runat="client">
                                <![CDATA[
                                        var sos = getSos('xiaoshoushoukuanchonghong');
                                        if(sos.length == 0 || sos.length > 1){
                                            alert("请选择一条记录");
							                return;
                                        }else if(sos[0].status !=1){
                                            alert("【录入状态】的单据才能编辑！");
                                             return;
                                        }
                                        @$this.edit();
	                            ]]>
                            </Trigger>
                        </Triggers>
                    </BillUIWidget>
                    <BillUIWidget Key="del" Caption="删除"
                                  EnabledWhen="True"
                                  Icon="glyphicon glyphicon-trash" WidgetType="BillUIButton" S="btn btn-danger">
                        <Triggers>
                            <Trigger Type="javascript/angular" Runat="client">
                                <![CDATA[
									 var sos = getSos('xiaoshoushoukuanchonghong');
									 if(sos.length==0){
							            alert("请选择需要删除记录");
							            return;
							         }else{
							             for(var i=0;i<sos.length;i++){
							                 if(sos[i].status!=1){
							                     alert("【录入状态】的单据可以删除！");
							                     return;
							                 }
							             }
							         }
							         @$this.delete();
                      		]]>
                            </Trigger>
                        </Triggers>
                    </BillUIWidget>

                    <BillUIWidget Key="print" Caption="打印"
                                  EnabledWhen="True"  Disable="true"
                                  Icon="glyphicon glyphicon-print" WidgetType="BillUIButton">
                        <Triggers>
                            <Trigger Type="javascript/angular" Runat="client">
                                <![CDATA[

	                            ]]>
                            </Trigger>
                        </Triggers>
                    </BillUIWidget>

                    <BillUIWidget Key="prePrint" Caption="打印预览" Disable="true"
                                  EnabledWhen="True"
                                  Icon="glyphicon glyphicon-camera" WidgetType="BillUIButton">
                        <Triggers>
                            <Trigger Type="javascript/angular" Runat="client">
                                <![CDATA[

	                            ]]>
                            </Trigger>
                        </Triggers>
                    </BillUIWidget>
                </BillUIPanel>
                <BillUIPanel Layout="flex" Key="bills_tools" Caption="查询面板"
                             S="panel panel-default publicPanel">
                    <BillUIGridPanel Device="sm" key="boxtool">
                        <BillUIRowPanel>
                            <BillUIColPanel Width="3">
                                <BillUIWidget Key="danjubianhao" ParameterKey="danjubianhao"
                                              DataTableKey="xiaoshoushoukuanchonghong"
                                              Caption="单据编号"
                                              EnabledWhen="True"
                                              Icon="glyphicon glyphicon-send" WidgetType="BillUIString">
                                </BillUIWidget>
                            </BillUIColPanel>
                            <BillUIColPanel Width="3">
                                <BillUIWidget Key="khbh" ParameterKey="khbh"
                                              DataTableKey="xiaoshoushoukuanchonghong"
                                              Caption="客户编号"
                                              EnabledWhen="True"
                                              Icon="glyphicon glyphicon-send" WidgetType="BillUIString">
                                </BillUIWidget>
                            </BillUIColPanel>
                            <BillUIColPanel Width="3">
                                <BillUIWidget Key="khmc" ParameterKey="khmc"
                                              DataTableKey="xiaoshoushoukuanchonghong"
                                              Caption="客户名称"
                                              EnabledWhen="True"
                                              Icon="glyphicon glyphicon-send" WidgetType="BillUIString">
                                </BillUIWidget>
                            </BillUIColPanel>
                            <BillUIColPanel Width="3">
                                <BillUIWidget Caption="取消" Key="cancel"
                                              EnabledWhen="True"
                                              Icon="glyphicon glyphicon-send" WidgetType="BillUIButton">
                                    <Triggers>
                                        <Trigger Type="javascript/angular" Runat="client">
                                            <![CDATA[
			                                      @danjubianhao.setValue("");
			                                      @khbh.setValue("");
			                                      @khmc.setValue("");
			                                      @$this.__load();
			 	                            ]]> 
                                        </Trigger>
                                    </Triggers>
                                </BillUIWidget>
                                <BillUIWidget Caption="查询" Key="search"
                                              EnabledWhen="True"
                                              Icon="glyphicon glyphicon-send" WidgetType="BillUIButton">
                                    <Triggers>
                                        <Trigger Type="javascript/angular" Runat="client">
                                            <![CDATA[
                                    @$this.__load("xiaoshoushoukuanchonghong");
	                            ]]>
                                        </Trigger>
                                    </Triggers>
                                </BillUIWidget>
                            </BillUIColPanel>
                        </BillUIRowPanel>
                    </BillUIGridPanel>
                </BillUIPanel>
                <BillUIPanel Layout="tab" Key="bills_tabs" Caption="查询展示列"
                             S="panel  panel-primary  publicPanel">
                    <BillUIGrid Key="grid0" SelectMode="Multi" OptMode="View" DataTableKey="xiaoshoushoukuanchonghong">
                        <RowCheckRule>
                            <![CDATA[
                                        this.status<10,success,warning
                                    ]]>
                        </RowCheckRule>
                        <DoubleClickHandlers>
                            <DoubleClickHandler>
                                <![CDATA[
                                    var shangpin=this.row;
                                    window.location.href='/bill/view/bill?billKey=xiaoshoushoukuanchonghong&BillID='+shangpin.BillID+'&allDisabled=true';

                                ]]>
                            </DoubleClickHandler>
                        </DoubleClickHandlers>

                        <GridHeads>
                        	<GridHead Col="danjubianhao" Caption="单据编号" enableEdit="True" Width="150px">
                                <BillUIWidget Key="danjubianhao" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="createTime" Caption="制单日期" enableEdit="True" Width="150px">
                                <BillUIWidget Key="createTime" WidgetType="BillUIDateTime"/>
                            </GridHead>
                            <GridHead Col="creatorName" Caption="制单人" enableEdit="True" Width="120px">
                                <BillUIWidget Key="creatorName" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="yuandanbianhao" Caption="原单编号" enableEdit="True" Width="150px">
                                <BillUIWidget Key="yuandanbianhao" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="khbh" Caption="客户编号" enableEdit="True" Width="150px">
                                <BillUIWidget Key="khbh" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="khmc" Caption="客户名称" enableEdit="True" Width="150px">
                                <BillUIWidget Key="khmc" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="yewuyuan" Caption="业务员" enableEdit="True" Width="80px">
                                <BillUIWidget Key="yewuyuan" WidgetType="BillUIString"/>
                            </GridHead>
                            <GridHead Col="beizhu" Caption="备注" enableEdit="True" Width="80px">
                                <BillUIWidget Key="beizhu" WidgetType="BillUIString"/>
                            </GridHead>
                        </GridHeads>
                    </BillUIGrid>
                </BillUIPanel>
            </BillUIPanel>
        </BillBodyMeta>
    </BillBody>
    <BillHeadMeta> 

    </BillHeadMeta>
</BillFormMeta>

