						<Init Type="javascript/angular" Runat="client">
                                        <![CDATA[
                                        		if(getStatus()>=20){
                                        			this.setHide();
                                        		}else{
                                        			this.setShow();
                                        		}
									]]>
						</Init>
					</BillUIWidget>
					<BillUIWidget Key="submit" Caption="提交" EnabledWhen="True"
						Icon="glyphicon glyphicon-floppy-saved" WidgetType="BillUIButton">
